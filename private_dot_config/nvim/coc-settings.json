{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "html",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "lua",
    "markdown",
    "python",
    "rust",
    "scss",
    "typescript",
    "typescriptreact"
  ],
  // eslint
  "eslint.run": "onSave",
  "eslint.autoFixOnSave": true,
  // explorer
  "explorer.git.icon.rootStatus.added": "+",
  "explorer.git.icon.rootStatus.ahead": "⇡",
  "explorer.git.icon.rootStatus.behind": "⇣",
  "explorer.git.icon.rootStatus.conflicted": "=",
  "explorer.git.icon.rootStatus.deleted": "✘",
  "explorer.git.icon.rootStatus.modified": "!",
  "explorer.git.icon.rootStatus.renamed": "»",
  "explorer.git.icon.rootStatus.stashed": "≡",
  "explorer.git.icon.rootStatus.untracked": "?",
  "explorer.icon.enableNerdfont": true,
  "explorer.keyMappingMode": "none",
  "explorer.keyMappings.global": {
    "h": "collapse",
    "l": ["expandable?", "expand", "open"],
    "J": ["toggleSelection", "nodeNext"],
    "K": ["toggleSelection", "nodePrev"],
    "yn": "copyFilename",
    "yp": "copyFilepath",
    "yy": "copyFile",
    "p": "pasteFile",
    "dd": "cutFile",
    "df": "delete",
    "dF": "deleteForever",
    "a": "addFile",
    "A": "addDirectory",
    "r": "rename",
    "gp": "preview:labeling",
    "gq": "quit",
    "za": ["expanded?", "collapse", "expand"],
    "zA": ["expanded?", "collapse:recursive", "expand:recursive"],
    "zc": "collapse",
    "zC": "collapse:recursive",
    "zo": "expand",
    "zO": "expand:recursive",
    "zz": "reveal:select",
    "gr": "refresh",
    "g.": "toggleHidden",
    "g?": "help",
    "[c": "gitPrev",
    "]c": "gitNext",
    "{": "indentPrev",
    "}": "indentNext",
    "<BS>": "gotoParent",
    "<CR>": ["expandable?", "cd", "open"],
    "<C-t>": "open:tab",
    "<C-s>": "open:split",
    "<C-v>": "open:vsplit"
  },
  "explorer.previewAction.onHover": false,
  "explorer.quitOnOpen": true,
  "explorer.width": 40,
  // javascript
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  // lua
  "Lua.diagnostics.globals": ["vim"],
  "Lua.hint.enable": false,
  "Lua.runtime.path": ["?.lua", "lua/?.lua", "lua/?/init.lua"],
  "Lua.runtime.version": "LuaJIT",
  "Lua.telemetry.enable": false,
  "Lua.workspace.maxPreload": 10000,
  "Lua.workspace.preloadFileSize": 10000,
  // prettier
  "prettier.arrowParens": "always",
  "prettier.disableSuccessMessage": true,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  // python
  // typescript
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true
}
